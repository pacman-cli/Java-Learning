# Hospital Management System - Environment Variables
# Copy this file to .env.local and update the values as needed

# =================================
# API Configuration
# =================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_TIMEOUT=30000

# =================================
# Application Configuration
# =================================
NEXT_PUBLIC_APP_NAME="Hospital Management System"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Comprehensive hospital management platform"

# =================================
# Authentication Configuration
# =================================
NEXT_PUBLIC_AUTH_COOKIE_NAME="authToken"
NEXT_PUBLIC_AUTH_USER_COOKIE_NAME="authUser"
NEXT_PUBLIC_SESSION_TIMEOUT=86400000

# =================================
# Theme Configuration
# =================================
NEXT_PUBLIC_DEFAULT_THEME="system"
NEXT_PUBLIC_THEME_COOKIE_NAME="theme"

# =================================
# File Upload Configuration
# =================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/*,application/pdf,.doc,.docx,.xls,.xlsx"
NEXT_PUBLIC_UPLOAD_ENDPOINT="/api/documents/upload"

# =================================
# Feature Flags
# =================================
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false

# =================================
